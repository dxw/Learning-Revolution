<div id="event_details" class="event clearfix vevent">
  
  <% if event.new_record? %>
    <h2><%= event.title %></h2>
  <% else %>
    <h2><%= link_to event.title, path_for_event(event), :class => "url summary" %></h2>
  <% end %>
  <div class="clearfix detail_list">
    
    <div class="span-2">
    
      <div class="detail">
      
      <%= image_tag('headings/hd_when.gif', :alt => 'When') %>

      <div class="time">
        <abbr class="dtstart" title="<%= event.start.iso8601 %>"><%= event.start.strftime("%e %B %R%p") %></abbr>        
      </div>

      <% if event.end %>
      <div class="time">
        <abbr class="dtend" title="<%= event.end.iso8601 %>">until
	  <%= (event.start.strftime('%Y-%M-%d') == event.end.strftime('%Y-%M-%d')) ? '' : event.end.strftime('%e %B') %>
	  <%= event.end.strftime("%R%p") %></abbr>
      </div>
      <% end %>

      </div>
  
      <div class="detail">
      
      <%= image_tag('headings/hd_where.gif', :alt => 'Where') %>
      <% if event.venue.present? %>
        <h4><%= event.venue.name %></h4>
        <p class="location">
          <%= event.venue.address_1 %><br />
          <%= event.venue.address_2 %><br />
          <%= event.venue.address_3 %><br />
          <%= event.venue.city %><br />
          <%= "#{event.venue.county} <br/>" unless event.venue.county.blank? %>
          <%= event.venue.postcode %>
        </p>
      <% else %>
        <p>This event has no location</p>
      <% end %>
      </div>

    </div>

    <div class="span-2">
      
      <div class="detail">
        <%= image_tag('headings/hd_type.gif', :alt => 'Type') %>
        <p><%= event.event_type.blank? ? "Other" : event.event_type %></p>
      </div>
      <div class="detail">
        <%= image_tag('headings/hd_theme.gif', :alt => 'Theme') %>
        <p><%= event.theme.blank? ? "Other" : event.theme %></p>
      </div>

      <div class="detail">
        <%= image_tag('headings/hd_cost.gif', :alt => 'Cost') %>
        <p><%= event.cost.blank? ? "Free" : event.cost %></p>

      </div>    

    </div>

    <div class="span-2 last">
    <% unless event.new_record? %>
      <ul class="sm_icons">
        <%
        	pa = params.dup
        	pa.delete(:view)
        %>
      
        <li class="calendar"><%= link_to "Add to calendar.", url_for(pa.merge(:format => 'ics')).sub(/\?$/,'') %></li>
        <li class="google_calendar"><%= link_to "Add to Google Calendar.", "http://www.google.com/calendar/render?cid="+CGI::escape(url_for(pa.merge(:format => 'ics', :only_path => false)).sub(/\?$/,'')) %></li>
        <li class="twitter"><%= link_to "Tweet this event", "http://twitter.com/home?status=Going to something" %></li>
        <li class="facebook"><%= link_to "Add to Facebook" %></li>
      </ul>
    <% end %>

    </div>
  
  </div>
  
  <div class="description half_page">

    <%= image_tag('headings/hd_event_details.gif', :alt => 'Event Details') %>
    <%= simple_format event.description %>

    <% unless params[:action] == 'show' %>
      <%# debugger %>
    <%= image_tag('headings/hd_contact_details.gif', :alt => 'Contact Details') %>
    <p class="vcard">
      <span class="fn n"><%= "#{event.contact_name} - " %></span>
      <span class="org"><%= "#{event.organisation} -" if event.organisation.present? %></span> 
      <span class="tel"><%= "#{event.contact_phone_number if event.contact_phone_number} - " %></span> 
      <a class="email" href="mailto:email"><%= event.contact_email_address if event.contact_email_address %></a>
    </p>

    <% end %>
  </div>
  
  
</div>
