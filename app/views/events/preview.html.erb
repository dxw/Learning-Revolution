<div id="content_header">

  <h2>Preview your event</h2>

  <h3 class="heading">You're about to add this this event to the listings, and it'll look something like this. Are all the details correct?</h3>

</div>

<div class="events">

  <div class="form_wrapper clearfix">

    <div class="event_preview clearfix">

      <%= render :partial => 'event_details', :locals => {:event => @new_event} %>

    </div>

     <div class="submit_message clearfix">
        <p>Disclaimer text.</p>

        <p>If you have any questions, please contact the team on <a href="mailto:foobar@example.org">foobar@example.org</a></p>
     </div>

     <div class="form_submission">
        <% form_for @new_event, :url => events_path(:event => params[:event], :cyberevent => params[:cyberevent], :venue => params[:venue], :edit => true), :html => {:id => "edit_form"} do %>
           <div><%= submit_tag("Edit this event",  :class => "edit_this_event awesome medium") %></div>
        <% end %>

        <% form_for @new_event, :url => events_path(:event => params[:event], :cyberevent => params[:cyberevent], :venue => params[:venue]), :html => {:id => "save_form"} do %>
           <div><%= submit_tag("Add this event to the listings", :class => 'awesome medium')%></div>
        <% end %>

    </div>


  </div>
</div>
