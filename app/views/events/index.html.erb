<div class="content">
<div class="events">
   <%= render :partial => 'event_search_filter' %>
   
   <%= render :partial => 'view_selector' %>
   
   <% if params[:view] == "map" %>
     <%= render :partial => 'map_view' %>
   <% else params[:view] == "list" %>
     <%= render :partial => 'calendar_view' %>
   <% end %>
</div>
<div class="new_event">
  <div class="form_wrapper clearfix">
    
  <% form_for @new_event do |event_form| %>

  <%= image_tag('headings/hd_add_an_event_to_the_calendar.png') %>

  <div class="input clearfix">
  <label for="event_title">Title</label>
  <%= event_form.text_field :title, :class => 'text' %>
  <div class="tooltip">Helpful copy explaining how best to fill each form appears here, as focus moves to each form.</div>
  <div class="tooltip_arrow"></div>
  </div>

    <% event_form.fields_for :venue do |venue_form| %>
    <div class="input clearfix">
    <label for="event_venue_postcode">Postcode</label>
    <%= venue_form.text_field :postcode, :class => 'text' %>
    </div>
    
    <div class="input clearfix">
    <label for="event_venue_name">Venue name</label>
    <%= venue_form.text_field :name, :class => 'text' %>
    </div>

    <div class="input clearfix">
    <label for="event_venue_address_1">Address Line 1</label>
    <%= venue_form.text_field :address_1, :class => 'text' %>
    </div>

    <div class="input clearfix">
    <label for="event_venue_address_2">Address Line 2</label>
    <%= venue_form.text_field :address_2, :class => 'text' %>
    </div>

    <div class="input clearfix">
    <label for="event_venue_address_3">Address Line 3</label>
    <%= venue_form.text_field :address_3, :class => 'text' %>
    </div>

    <div class="input clearfix">
    <label for="event_venue_city">City</label>
    <%= venue_form.text_field :city, :class => 'text' %>
    </div>

    <div class="input clearfix">
    <label for="event_venue_county">County</label>
    <%= venue_form.text_field :county, :class => 'text' %>
    </div>
  <% end %>



  <div class="input clearfix">
    <label for="event_theme">Category</label>
    <%= event_form.select :theme, options_for_select(Event::Themes) %>
  </div>

  <div class="input clearfix">
    <label for="event_event_type">Event Type</label>
    <%= event_form.select :event_type, options_for_select(Event::Types) %>
  </div>
  
  <div class="input clearfix">
    <label for="event_description">Description</label>
    <%= event_form.text_area :description, :cols => 38, :rows => 10, :class => 'text' %>
  </div>
  
  <div class="input clearfix">
    <label for="event_start">From</label>
    <%= event_form.text_field :start, :class => 'text' %>
  </div>
  
  <div class="input clearfix">
    <label for="event_end">until</label>
    <%= event_form.text_field :end, :class => 'text' %>
  </div>
  
  <fieldset id="more_info" class="">
    <legend><strong>More info</strong> (optional, but please add it if you have it)</legend>
  
    <div id="further_info">
    
    <div class="input clearfix">
      <label for="event_organisation">Organisation</label>
      <%= event_form.text_field :organisation, :class => 'text' %>
    </div>
  
    <div class="input clearfix">
      <label for="event_contact_name">Contact Name</label>
      <%= event_form.text_field :contact_name, :class => 'text' %>
    </div>
  
    <div class="input clearfix">
      <label for="event_contact_phone_number">Contact Phone Number</label>
      <%= event_form.text_field :contact_phone_number, :class => 'text' %>
    </div>

    <div class="input clearfix">
      <label for="event_contact_email_address">Contact Email Address</label>
      <%= event_form.text_field :contact_email_address, :class => 'text' %>
    </div>
  
  </div>

  </fieldset>
  
  <%= image_submit_tag('/images/buttons/bt_submit_your_event.png', :alt => "Add your Event", :class => "submit_your_event") %>
  <% end %>
  </div>

</div>
</div>