<div id="content_header">
  <h2>Pages admin</h2>
  <h3>"<%=h @page.title %>" page</h3>

  <%= (flash[:page].nil? ? '' : "<div class='admin_flash'>#{flash[:page]}</div>") %>

</div>

<div class="form_wrapper clearfix">

<% form_for [:admin, @page] do |page_form| %>
  <%= render :partial => "fields", :locals => {:page_form => page_form} %>
  <p><%= page_form.submit "Save" %></p>
<% end %>

</div>
