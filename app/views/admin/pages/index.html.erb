<div id="content_header">
  <%= image_tag('headings/admin/hd_pages_admin.gif', :class => 'heading') %>
  <h3>Manage the content of static pages</h3>

  <%= (flash[:page].nil? ? '' : "<div class='admin_flash'>#{flash[:page]}</div>") %>

  <div class="form_wrapper clearfix">

      <% unless @pages.blank? %>

        <div class="page_list">
          <ul>
            <% @pages.each do |page| %>
              <li><%= link_to h(page.title), edit_admin_page_path(page) %></li>
            <% end %>
          </ul>
        </div>

        <% else %>
          <h3>There are currently no pages here to edit</h3>
        <% end %>    
    </div>

</div>