<% form_for :admin, @location do |location_form| %>
  <p><label>Name      : <%= location_form.text_field :name      %></label></p>
  <p><label>Address 1 : <%= location_form.text_field :address_1 %></label></p>
  <p><label>Address 2 : <%= location_form.text_field :address_2 %></label></p>
  <p><label>Address 3 : <%= location_form.text_field :address_3 %></label></p>
  <p><label>City      : <%= location_form.text_field :city      %></label></p>
  <p><label>County    : <%= location_form.text_field :county    %></label></p>
  <p><label>Postcode  : <%= location_form.text_field :postcode  %></label></p>
  <p><%= location_form.submit %></p>
<% end %>